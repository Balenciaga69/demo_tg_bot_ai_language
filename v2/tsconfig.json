{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "lib": ["es2023"],
    "paths": {
      "@shared/audio": ["shared/audio/src/index.ts"],
      "@shared/audio/*": ["shared/audio/src/*"],
      "@shared/contracts": ["shared/contracts/src/index.ts"],
      "@shared/contracts/*": ["shared/contracts/src/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "types": ["jest", "node"]
  },
  "include": ["apps/**/*", "shared/**/*"]
}
