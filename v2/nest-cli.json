{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true,
    "outDir": "dist"
  },
  "projects": {
    "telegram-bot": {
      "type": "application",
      "root": "apps/telegram-bot",
      "entryFile": "main",
      "sourceRoot": "apps/telegram-bot/src",
      "compilerOptions": {
        "tsConfigPath": "apps/telegram-bot/tsconfig.json",
        "outDir": "dist/apps/telegram-bot"
      }
    },
    "stt-service": {
      "type": "application",
      "root": "apps/stt-service",
      "entryFile": "main",
      "sourceRoot": "apps/stt-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/stt-service/tsconfig.json",
        "outDir": "dist/apps/stt-service"
      }
    }
  }
}
