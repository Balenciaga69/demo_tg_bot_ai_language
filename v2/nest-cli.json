{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.json"
      }
    },
    "stt-service": {
      "type": "application",
      "root": "apps/stt-service",
      "entryFile": "main",
      "sourceRoot": "apps/stt-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/stt-service/tsconfig.json"
      }
    }
  }
}
