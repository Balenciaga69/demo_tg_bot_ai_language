  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/stt-service/main",
    "start:stt": "nest start stt-service",
    "start:stt:dev": "nest start stt-service --watch",
    "start:bot": "nest start telegram-bot",
    "start:bot:dev": "nest start telegram-bot --watch",
    "start:all:dev": "concurrently \"npm run start:stt:dev\" \"npm run start:bot:dev\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config apps/stt-service/test/jest-e2e.json"
  },
